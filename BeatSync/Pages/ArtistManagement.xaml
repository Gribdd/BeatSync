<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeatSync.Pages.ArtistManagement"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:BeatSync.Models"
    xmlns:viewmodel="clr-namespace:BeatSync.ViewModel.Admin"
    Title="ArtistManagement"
    x:DataType="viewmodel:ArtistManagementViewModel"
    BackgroundImageSource="resizedbackgroundpixel.png"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="ImageButton">
                <Setter Property="HeightRequest" Value="35" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <ImageButton Margin="30" Source="profileicon.png" />
            <Label
                Margin="-25,35,0,0"
                Style="{StaticResource SubHeadline}"
                Text="Artist Management"
                TextColor="White" />
            <ImageButton Margin="25,0,0,0" Source="search.png" />
            <ImageButton
                Margin="-5,0,0,0"
                HeightRequest="30"
                Source="add.png" />
        </HorizontalStackLayout>
        <BoxView
            Margin="0,-10,0,0"
            HeightRequest="2"
            WidthRequest="310"
            Color="White" />
        <HorizontalStackLayout Margin="40,10,10,10" Spacing="10">
            <Button
                Padding="20"
                BackgroundColor="#9747FF"
                Command="{Binding NavigateAddArtistCommand}"
                CornerRadius="25"
                Text="Add" />
            <Button
                Padding="20"
                BackgroundColor="#9747FF"
                Command="{Binding DeleteArtistCommand}"
                CornerRadius="25"
                Text="Delete" />
            <Button
                Padding="20"
                BackgroundColor="#9747FF"
                Command="{Binding UpdateArtistCommand}"
                CornerRadius="25"
                Text="Update" />
        </HorizontalStackLayout>
        <CollectionView ItemsSource="{Binding Artists}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Artist">
                    <Frame Margin="30,5,30,5" BackgroundColor="#17122E">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".1*" />
                                <ColumnDefinition Width=".8*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Row="0"
                                Grid.Column="0"
                                HeightRequest="40"
                                Source="{Binding ImageFilePath}" />
                            <VerticalStackLayout
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="5"
                                HeightRequest="50"
                                VerticalOptions="Center">
                                <HorizontalStackLayout>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Start"
                                        Style="{StaticResource SubHeadline}"
                                        Text=" # "
                                        TextColor="White"/>
                                    <Label
                                         FontAttributes="Bold"
                                         HorizontalOptions="Start"
                                         Style="{StaticResource SubHeadline}"
                                         Text="{Binding Id}"
                                         TextColor="White" />
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Start"
                                        Style="{StaticResource SubHeadline}"
                                        Text=" | "
                                        TextColor="White"/>
                                    <Label
                                         FontAttributes="Bold"
                                         HorizontalOptions="Start"
                                         Style="{StaticResource SubHeadline}"
                                         Text="{Binding Username}"
                                         TextColor="White" />       
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="5">
                                    <Label
                                        Style="{StaticResource Fields}"
                                        Text="{Binding FirstName}"
                                        TextColor="#7EA6D9" />

                                    <Label
                                        Style="{StaticResource Fields}"
                                        Text="{Binding LastName}"
                                        TextColor="#7EA6D9" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>