<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeatSync.Pages.LandingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:BeatSync.Models"
    xmlns:viewmodel="clr-namespace:BeatSync.ViewModel.Users"
    Title="LandingPage"
    x:DataType="viewmodel:LandingPageViewModel"
    BackgroundImageSource="resizedbackgroundpixel.png"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout>
            <!--  Top Elements  -->
            <HorizontalStackLayout>
                <ImageButton
                    Margin="30"
                    Command="{Binding LogoutCommand}"
                    HeightRequest="35"
                    HorizontalOptions="Start"
                    Source="profileicon.png" />
                <Label
                    Margin="-25,35,0,0"
                    Style="{StaticResource SubHeadline}"
                    Text="Hi, {UserType}!"
                    TextColor="White" />
                <ImageButton
                    Margin="55,0,0,0"
                    HeightRequest="35"
                    HorizontalOptions="Start"
                    Source="search.png" />
                <ImageButton
                    Margin="-5,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="Start"
                    Source="add.png" />
            </HorizontalStackLayout>
            <BoxView
                Margin="0,-10,0,0"
                HeightRequest="2"
                WidthRequest="310"
                Color="White" />
            <ScrollView>
                <VerticalStackLayout Margin="35,10,35,10">
                    <!--  Genres Carousel View  -->
                    <CarouselView Loop="False" PeekAreaInsets="50">
                        <CarouselView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Rap</x:String>
                                <x:String>Pop</x:String>
                                <x:String>Indie</x:String>
                                <x:String>OPM</x:String>
                                <x:String>Punk Rock</x:String>
                            </x:Array>
                        </CarouselView.ItemsSource>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Margin="10">
                                    <Frame HeightRequest="100" WidthRequest="200">
                                        <HorizontalStackLayout HorizontalOptions="Center">
                                            <Image
                                                HeightRequest="40"
                                                Source="logo.png"
                                                WidthRequest="50" />
                                            <Label
                                                Margin="10,15,0,0"
                                                FontAttributes="Bold"
                                                HorizontalTextAlignment="Center"
                                                Style="{StaticResource Headline}"
                                                Text="{Binding .}"
                                                TextColor="Black" />
                                        </HorizontalStackLayout>
                                    </Frame>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!--  Top Hits  -->
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource SubHeadline}"
                        Text="Top Hits"
                        TextColor="White" />
                    <CarouselView ItemsSource="{Binding NewSongs}" PeekAreaInsets="100">
                        <CarouselView.ItemTemplate>
                            <DataTemplate x:DataType="model:Song">
                                <VerticalStackLayout Margin="10">
                                    <Frame HeightRequest="120" WidthRequest="120">
                                        <HorizontalStackLayout HorizontalOptions="Center">
                                            <Image Aspect="AspectFill" Source="{Binding ImageFilePath}" />
                                        </HorizontalStackLayout>
                                    </Frame>
                                    <Label
                                        Margin="5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Fields}"
                                        Text="{Binding Name}"
                                        TextColor="White" />
                                    <Label
                                        Margin="5,-5,5,5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Reminders}"
                                        Text="{Binding ArtistName}"
                                        TextColor="#A39797" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!--  Recently Played  -->
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource SubHeadline}"
                        Text="Recently Played"
                        TextColor="White" />
                    <CarouselView ItemsSource="{Binding NewSongs}" PeekAreaInsets="100">
                        <CarouselView.ItemTemplate>
                            <DataTemplate x:DataType="model:Song">
                                <VerticalStackLayout Margin="10">
                                    <Frame HeightRequest="120" WidthRequest="120">
                                        <HorizontalStackLayout HorizontalOptions="Center">
                                            <Image Aspect="AspectFill" Source="{Binding ImageFilePath}" />
                                        </HorizontalStackLayout>
                                    </Frame>
                                    <Label
                                        Margin="5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Fields}"
                                        Text="{Binding Name}"
                                        TextColor="White" />
                                    <Label
                                        Margin="5,-5,5,5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Reminders}"
                                        Text="{Binding ArtistName}"
                                        TextColor="#A39797" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!--  New Music  -->
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource SubHeadline}"
                        Text="New Music"
                        TextColor="White" />
                    <CarouselView ItemsSource="{Binding NewSongs}" PeekAreaInsets="100">
                        <CarouselView.ItemTemplate>
                            <DataTemplate x:DataType="model:Song">
                                <VerticalStackLayout Margin="10">
                                    <Frame HeightRequest="120" WidthRequest="120">
                                        <HorizontalStackLayout HorizontalOptions="Center">
                                            <Image Aspect="AspectFill" Source="{Binding ImageFilePath}" />
                                        </HorizontalStackLayout>
                                    </Frame>
                                    <Label
                                        Margin="5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Fields}"
                                        Text="{Binding Name}"
                                        TextColor="White" />
                                    <Label
                                        Margin="5,-5,5,5"
                                        HorizontalTextAlignment="Start"
                                        Style="{StaticResource Reminders}"
                                        Text="{Binding ArtistName}"
                                        TextColor="#A39797" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>