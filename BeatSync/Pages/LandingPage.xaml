<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeatSync.Pages.LandingPage"
             Title="LandingPage"
             BackgroundImageSource="resizedbackgroundpixel.png"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout>
        <!--Top Elements-->
        <HorizontalStackLayout>
            <ImageButton Source="profileicon.png" HeightRequest="35" Margin="30" HorizontalOptions="Start"></ImageButton>
            <Label Style="{StaticResource SubHeadline}" Text="Hi, {UserType}!" TextColor="White" Margin="-25,35,0,0"></Label>
            <ImageButton Source="search.png" HeightRequest="35" Margin="55,0,0,0" HorizontalOptions="Start"></ImageButton>
            <ImageButton Source="add.png" HeightRequest="30" Margin="-5,0,0,0" HorizontalOptions="Start"></ImageButton>
        </HorizontalStackLayout>
        <BoxView HeightRequest="2" WidthRequest="310" Color="White" Margin="0,-10,0,0"></BoxView>
        
        <!--Genres Carousel View-->
        <CarouselView>
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Rap</x:String>
                    <x:String>Pop</x:String>
                    <x:String>Indie</x:String>
                    <x:String>OPM</x:String>
                    <x:String>Punk Rock</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" Margin="30,20,30,0" >
                        <Frame HeightRequest="150">
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Image Source="logo.png" HeightRequest="50" WidthRequest="50" Margin="0,0,0,0"></Image>
                                <Label Style="{StaticResource Headline}" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding .}" TextColor="Black" Margin="10,40,0,0"></Label>
                            </HorizontalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        
        <!--Top Hits-->
        <Label Style="{StaticResource SubHeadline}" Text="Top Hits" TextColor="White" Margin="35,20,0,0" HorizontalOptions="Start"></Label>
        <CarouselView PeekAreaInsets="150" Margin="30,0,30,0">
            <CarouselView.ItemsSource >
                <x:Array Type="{x:Type x:String}">
                    <x:String>Rap</x:String>
                    <x:String>Pop</x:String>
                    <x:String>Indie</x:String>
                    <x:String>OPM</x:String>
                    <x:String>Punk Rock</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" Margin="30,15,-5,30" HorizontalOptions="Start">
                        <Frame HeightRequest="150" WidthRequest="150">
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Image Source="logo.png" HeightRequest="50" WidthRequest="50" Margin="0,0,0,0"></Image>
                                <Label Style="{StaticResource Headline}" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding .}" TextColor="Black" Margin="10,40,0,0"></Label>
                            </HorizontalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
            
        </CarouselView>
    </VerticalStackLayout>

</ContentPage>