<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeatSync.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:BeatSync.Models"
    xmlns:viewmodel="clr-namespace:BeatSync.ViewModel.PublisherShell"
    Title="LibraryPage"
    x:DataType="viewmodel:LibraryPageViewModel"
    BackgroundImageSource="resizedbackgroundpixel.png"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout>
        <!--  Top Elements  -->
        <HorizontalStackLayout>
            <ImageButton
                Margin="30"
                Command="{Binding LogoutCommand}"
                HeightRequest="35"
                HorizontalOptions="Start"
                Source="profileicon.png" />
            <Label
                Margin="-25,35,0,0"
                Style="{StaticResource SubHeadline}"
                Text="Library"
                TextColor="White" />
            <ImageButton
                Margin="125,0,0,0"
                HeightRequest="35"
                HorizontalOptions="Start"
                Source="search.png" />
            <ImageButton
                Margin="-5,0,0,0"
                Command="{Binding AddAlbumCommand}"
                HeightRequest="30"
                HorizontalOptions="Start"
                Source="add.png" />
        </HorizontalStackLayout>
        <BoxView
            Margin="0,-10,0,10"
            HeightRequest="2"
            WidthRequest="310"
            Color="White" />

        <!--  Library Elements  -->
        <!--  Created Playlists  -->

        <CollectionView
            x:Name="collectionView"
            HorizontalScrollBarVisibility="Always"
            ItemsSource="{Binding Albums}"
            SelectedItem="{Binding SelectedAlbum}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Album">
                    <Frame
                        Margin="30,10,30,10"
                        BackgroundColor="#17122E"
                        HeightRequest="80"
                        WidthRequest="310">
                        <Grid ColumnDefinitions=".2*,.8*">
                            <Image
                                Grid.Column="0"
                                HeightRequest="40"
                                Source="{Binding ImageFilePath}" />
                            <VerticalStackLayout
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="5"
                                HeightRequest="50"
                                VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource SubHeadline}"
                                    Text="{Binding Name}"
                                    TextColor="White" />

                                <HorizontalStackLayout Spacing="10">
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text="{Binding ArtistName}"
                                        TextColor="#A39797" />
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text=" | "
                                        TextColor="#7EA6D9" />
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text="{Binding Songs.Count, FallbackValue='0 song', StringFormat='{0} songs'}"
                                        TextColor="#A39797" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BindingContext.NavigateToAddAlbumSongsCommand, Source={x:Reference collectionView}}" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>


</ContentPage>