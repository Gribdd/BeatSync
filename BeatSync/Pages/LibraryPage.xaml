<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeatSync.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:BeatSync.ViewModel.PublisherShell"
    Title="LibraryPage"
    x:DataType="viewmodel:LibraryPageViewModel"
    BackgroundImageSource="resizedbackgroundpixel.png"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout>
        <!--  Top Elements  -->
        <HorizontalStackLayout>
            <ImageButton
                Margin="30"
                Command="{Binding LogoutCommand}"
                HeightRequest="35"
                HorizontalOptions="Start"
                Source="profileicon.png" />
            <Label
                Margin="-25,35,0,0"
                Style="{StaticResource SubHeadline}"
                Text="Library"
                TextColor="White" />
            <ImageButton
                Margin="125,0,0,0"
                HeightRequest="35"
                HorizontalOptions="Start"
                Source="search.png" />
            <ImageButton
                Margin="-5,0,0,0"
                Command="{Binding AddAlbumCommand}"
                HeightRequest="30"
                HorizontalOptions="Start"
                Source="add.png" />
        </HorizontalStackLayout>
        <BoxView
            Margin="0,-10,0,10"
            HeightRequest="2"
            WidthRequest="310"
            Color="White" />

        <!--  Library Elements  -->
        <!--  Created Playlists  -->

        <CollectionView HorizontalScrollBarVisibility="Always">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Item 1</x:String>
                    <x:String>Item 1</x:String>
                    <x:String>Item 1</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="30,10,30,10"
                        BackgroundColor="#17122E"
                        HeightRequest="80"
                        WidthRequest="310">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".8*" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Grid.Row="0"
                                Grid.Column="0"
                                HeightRequest="40"
                                Source="logo.png" />
                            <!--  add image source  -->
                            <VerticalStackLayout
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="5"
                                HeightRequest="50"
                                VerticalOptions="Center">
                                <!--  add playlist name source here  -->
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource SubHeadline}"
                                    Text="Song Name"
                                    TextColor="White" />

                                <HorizontalStackLayout Spacing="10">
                                    <!--  bind artist name here  -->
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text="Artist Name"
                                        TextColor="#A39797" />
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text=" | "
                                        TextColor="#7EA6D9" />
                                    <!--  bind song count here  -->
                                    <Label
                                        Style="{StaticResource Reminders}"
                                        Text="23 Songs"
                                        TextColor="#A39797" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </VerticalStackLayout>


</ContentPage>