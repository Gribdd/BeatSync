<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BeatSync.Views.Admin_LandingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BeatSync.Pages"
    Title="Admin_LandingPage"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#17122E"
    Shell.TabBarForegroundColor="#FFFFFF"
    Shell.TabBarTitleColor="#FFFFFF"
    Shell.TabBarUnselectedColor="#7EA6D9">

    <TabBar>
        <Tab Title="Songs" Icon="songs.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SongManagement}" />
        </Tab>
        <Tab Title="Users" Icon="users.png">
            <ShellContent ContentTemplate="{DataTemplate pages:UserManagement}" />
        </Tab>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:LandingPage}" />
        </Tab>
        <Tab Title="Publishers" Icon="publishers.png">
            <ShellContent ContentTemplate="{DataTemplate pages:PublisherManagement}" />
        </Tab>
        <Tab Title="Artists" Icon="artists.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ArtistManagement}" />
        </Tab>
    </TabBar>

</Shell>
